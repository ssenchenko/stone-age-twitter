{
  "firestore": {
    "rules": "./src/services/firebase/firestore.rules",
    "indexes": "./src/services/firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "./build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source": "/service-worker.js",
      "headers": [{
        "key": "Cache-Control",
        "value": "no-cache"
      }]
    }]
  },
  "storage": {
    "rules": "./src/services/firebase/storage.rules"
  }
}
